<body>

<h1>Laporan Keuangan RT</h1>

<form id="formKeuangan">
  <label>Tanggal</label>
  <input type="date" id="tanggal" required />

  <label>Keterangan</label>
  <input type="text" id="keterangan" required />

  <label>Uang Masuk</label>
  <input type="number" id="masuk" />

  <label>Uang Keluar</label>
  <input type="number" id="keluar" />

  <button type="submit">Simpan</button>
</form>

<table id="tabel">
  <thead>
    <tr>
      <th>Tanggal</th>
      <th>Keterangan</th>
      <th>Masuk</th>
      <th>Keluar</th>
    </tr>
  </thead>
  <tbody></tbody>
</table>

<script>
const scriptURL = 'https://docs.google.com/spreadsheets/d/1wtFqaKGmuQVv1JzPWuU5dKKBRt9zYUlLCBEhChosKYE/edit?gid=0#gid=0';
const form = document.getElementById('formKeuangan');

form.addEventListener('submit', e => {
  e.preventDefault();
  fetch(scriptURL, {
    method: 'POST',
    body: new FormData(form)
  })
  .then(() => {
    alert('Data berhasil disimpan');
    form.reset();
  })
  .catch(error => alert('Error!', error.message));
});
</script>

